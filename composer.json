{
    "name": "gmurad/bakutoday-project",
    "description": "BakuToday Project - CodeIgniter 3",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-mysqli": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('application/config/config.sample.php', 'application/config/config.php');\" || true"
        ],
        "post-update-cmd": [
            "php -r \"copy('application/config/config.sample.php', 'application/config/config.php');\" || true"
        ]
    }
}
